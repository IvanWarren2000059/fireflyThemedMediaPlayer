<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <!-- Group Header with light green background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/groupHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:textSize="16sp"
            android:textColor="@color/group_header_text"
            android:fontFamily="sans-serif-medium"
            android:background="@color/group_header_background"
            android:padding="14dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="1dp" />
        
       
    </LinearLayout>

    <!-- Videos in this group - GRID LAYOUT (2 columns like ungrouped) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:clipToPadding="false" />

</LinearLayout>