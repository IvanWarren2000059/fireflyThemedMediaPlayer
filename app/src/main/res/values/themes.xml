<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Firefly Theme -->
    <style name="Theme.FireflyPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Material components -->
        <item name="cardViewStyle">@style/Widget.FireflyPlayer.CardView</item>
        <item name="materialCardViewStyle">@style/Widget.FireflyPlayer.CardView</item>
    </style>

    <!-- Fullscreen theme for player -->
    <style name="Theme.FireflyPlayer.Fullscreen" parent="Theme.FireflyPlayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>
    
    <!-- Card style for video items -->
    <style name="Widget.FireflyPlayer.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.FireflyPlayer.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.FireflyPlayer.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.FireflyPlayer.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.FireflyPlayer.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/accent</item>
    </style>
</resources>
